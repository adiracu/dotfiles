#!/bin/bash

# returns the relevant dotfiles for the currently set labels from a path
# e.g. get_label_dotfiles ~/.dotfiles/init
#   if the currently set label is osx
#    it will return all the files and folders found in ~/.dotfiles/init/osx

if [[ "$1" == "-h" || "$1" == "--help" ]]; then cat <<HELP

Usage: $(basename "$0") path_to_search

Returns all dotfiles and dotfolders found in the label folders within path_to_search.

HELP
exit; fi

if test $# -ne 1; then
	echo "Need a path to search in." 1>&2
	exit 1
fi


if test -f ~/.dotfiles/conf/labels_detected; then

	pushd "${1}" &>/dev/null

		OLD_IFS="$IFS"
	 	IFS=$'\n'

	 	for label in `cat ~/.dotfiles/conf/labels_detected` ; do
	 		if test -d "${label}"; then

		 		pushd "${label}" &>/dev/null
			 		for file in `find . -maxdepth 1 ! -name "."`; do
			 			name=`basename ${file}`
						echo `pwd`/"${name}"
			   	done
		   	popd &>/dev/null

	   	fi
	 	done

	 	IFS="$OLD_IFS"

 	popd &>/dev/null
fi
